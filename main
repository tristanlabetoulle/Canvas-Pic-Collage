<!DOCTYPE html>
<html>

<body>

<canvas id="piccollage" width="400" height="400">
</canvas>

<script>
var canvas = document.getElementById("piccollage");
var context = canvas.getContext("2d");
context.font = "bold 60px gabriola";

canvas.addEventListener('click', emergence,false);
function emergence(){
	var i = 256;
	var inter = setInterval(function(){context.clearRect(0,0,canvas.width, canvas.height); context.fillStyle='rgb('+i+','+i+','+i+')'; context.fillText("Pic Collage",100,100); i=i-1; if(i==0){clearInterval(inter);}},5);
}

</script>

</body>
</html>
